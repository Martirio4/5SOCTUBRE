<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/superContenedor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/verde4"
    >



        <android.support.design.internal.ScrimInsetsFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contenedor_buscador">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="com.craps.myapplication.View.Activities.ActivityLogin"
                android:id="@+id/layoutbotones">

                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tabLayoutCriterios"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/verde1"
                    app:tabIndicatorColor="@color/colorAccent"
                    app:tabSelectedTextColor="@color/marfil"
                   app:tabMode="scrollable"
                    app:tabTextColor="@color/verde3"
                    app:tabGravity="fill"/>

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contenedor_fragment_criterios">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPagerCriterios"
                        android:layout_width="match_parent"
                        android:background="@color/marfil"
                        android:layout_height="match_parent">

                        

                    </android.support.v4.view.ViewPager>

                </android.support.design.widget.CoordinatorLayout>
            </LinearLayout>

        </android.support.design.internal.ScrimInsetsFrameLayout>

</LinearLayout>
