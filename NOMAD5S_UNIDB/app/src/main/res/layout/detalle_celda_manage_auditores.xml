<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/marfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="@dimen/altoTarjeta"
            android:layout_margin="@dimen/margenChico"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/marfil">

            <FrameLayout
                android:background="@color/marfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margenChico"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagenCamara"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/desconocidocolor"
                    app:civ_border_width="2dp"
                    android:layout_gravity="center"
                    app:civ_border_color="#000000"/>

                <TextView
                    android:id="@+id/nombreNuevaArea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"

                    android:gravity="center"
                    android:text="new area"
                    android:textColor="@color/primary_text" />
            </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center|end"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.github.clans.fab.FloatingActionButton
                        android:alpha="0.8"
                        app:fab_size="mini"
                        android:src="@drawable/ic_delete_forever_black_24dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center|end"
                        android:id="@+id/botonEliminar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.github.clans.fab.FloatingActionButton
                        android:alpha="0.8"
                        app:fab_size="mini"
                        android:src="@drawable/ic_edit_black_24dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="top|end"
                        android:id="@+id/botonEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </FrameLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>