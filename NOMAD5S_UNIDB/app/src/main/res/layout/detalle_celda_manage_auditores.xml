<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blancoNomad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/altoTarjeta3"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margenMini"
        android:layout_marginStart="@dimen/margenChico"
        android:layout_marginEnd="@dimen/margenChico"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/marfil">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margenMini"
            android:layout_marginEnd="@dimen/margenChico"
            android:layout_marginStart="@dimen/margenChico"
            android:layout_marginTop="@dimen/margenMini"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imagenCamara"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/desconocidocolor"
                app:civ_border_color="#000000"
                app:civ_border_width="3dp" />


            <LinearLayout
                android:id="@+id/linearTextoNombreAuditor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_marginStart="@dimen/margenGrande"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50">



                    <TextView
                        android:id="@+id/nombreAuditor"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/margenChico"
                        android:gravity="center"
                        android:text="Auditor name"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp" />
                    <ImageButton
                        android:layout_marginStart="@dimen/margenMini"
                        android:id="@+id/botonEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit_black_24dp" />


                </LinearLayout>


            </LinearLayout>

            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/botonEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_delete_forever_red_24dp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

