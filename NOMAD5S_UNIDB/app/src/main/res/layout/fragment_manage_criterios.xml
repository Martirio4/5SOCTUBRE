<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blancoNomad"
    xmlns:fab="http://schemas.android.com/apk/res-auto"



    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.nomad.nomad5s.Fragments.FragmentManageAreas">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView

            android:id="@+id/recyclerCriterios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margenChico"
            android:layout_marginEnd="@dimen/margenMini"
            android:layout_marginBottom="@dimen/margenGrande"
            android:layout_marginStart="@dimen/margenMini">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <com.github.clans.fab.FloatingActionButton
        android:layout_gravity="bottom|end"
        android:id="@+id/agregarCriterio"
        fab:fab_colorNormal="@color/verde4"
        android:src="@drawable/ic_add_white_24dp"
        app:fab_label="@string/addNewArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</FrameLayout>